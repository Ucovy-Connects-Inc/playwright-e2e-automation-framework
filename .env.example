# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment Selection (qa, dev, prod)
ENV=qa

# Base URLs for different environments (without /login path)
QA_BASE_URL=https://my.qa.marathon.health
DEV_BASE_URL=https://stage.my.marathon-health.com  
PROD_BASE_URL=https://my.marathon-health.com

# CAPTCHA Bypass (get secret from dev team)
AUTOMATION_SECRET=your_secret_key_here

# Browser Settings
HEADLESS=true          # true for headless, false for headed
RETRIES=1              # Number of retries on failure
WORKERS=2              # Parallel workers

# Timeouts (milliseconds)  
ACTION_TIMEOUT=30000   # 30 seconds for actions
TEST_TIMEOUT=60000     # 60 seconds per test