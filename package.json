{
  "name": "workspace",
  "version": "1.0.0",
  "description": "Playwright TypeScript automation for LambdaTest eCommerce Playground",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:priority": "node ./scripts/run-priority-tests.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "playwright test && npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "cross-env": "^7.0.3",
    "exceljs": "^4.3.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
